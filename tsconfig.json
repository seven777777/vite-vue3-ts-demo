{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "suppressImplicitAnyIndexErrors": true // 开启索引到对象时禁止报告有关隐式anys的错误
    },

    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
